classdef Dog < handle
    %   A boid, hanlde subclass means reference type
    
    properties
        position = zeros(1,2)
        velocity = zeros(1,2)
        sheepMass = zeros(1,4)% number of sheep in each quadrant
        deltaVelocity = zeros(1,2)
        sheepMassHistory = [] %history of sheepMass over a sim
        deltaVelocityHistory = [] %history of delta velocity over a sim
        positionHistory = []
        sheepPosHistory = []
        velocityHistory = []
    end
    
    methods
        function obj = set.sheepMass(obj, newValue)
            obj.sheepMass = newValue;
            obj.sheepMassHistory = [obj.sheepMassHistory; newValue];
        end
        function obj = set.deltaVelocity(obj, newValue)
            obj.deltaVelocity = newValue;
            obj.deltaVelocity = [obj.deltaVelocity; newValue];
        end
        function obj = set.position(obj, newValue)
            obj.deltaVelocity = newValue;
            obj.deltaVelocity = [obj.deltaVelocity; newValue];
        end
        function obj = set.sheepPosHisto(obj, newValue)
            obj.deltaVelocity = newValue;
            obj.deltaVelocity = [obj.deltaVelocity; newValue];
        end
        function obj = set.velocityHistory(obj, newValue)
            obj.deltaVelocity = newValue;
            obj.deltaVelocity = [obj.deltaVelocity; newValue];
        end
    end
    
end
